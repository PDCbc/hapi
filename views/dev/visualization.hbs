<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>SCOOP Dev - Query Browser</title>
    </head>
    <body>
        <h2>Existing Visualizations</h2>
        {{#each visualizations}}
            <pre><code>{{this}}</pre></code>
        {{/each}}

        <h2>Add a Visualization.</h2>
        <form action="/dev/visualization" method="POST">
            <label for="title">Related Query</label>
            <select id="query" name="query" required>
                {{#each queries}}
                    <option value='{{_id}}'>{{title}}</option>
                {{/each}}
            </select>

            <label for="script">Script</label>
            <textarea id="script" name="script" required>
                placeholder="var foo = 'bar';"
            </textarea>

            <input type="submit">
        </form>
    </body>
</html>
